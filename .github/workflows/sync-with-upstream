name: Sync Fork

on:
  schedule:
    # This runs at 1:00 UTC every day
    - cron: '0 1 * * *'
  workflow_dispatch: # Allows manual triggering

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      
      - name: Configure Git
        run: |
          git config --global user.name 'GitHub Action'
          git config --global user.email 'action@github.com'
      
      - name: Sync Main Branch
        run: |
          # Replace UPSTREAM_OWNER and UPSTREAM_REPO with the actual upstream repository details
          git remote add upstream https://github.com/UberGuidoZ/Flipper.git
          git fetch upstream
          git checkout main
          git merge upstream/main
          git push origin main
      
      - name: Sync Device Branch
        run: |
          git checkout device
          git merge upstream/main
          git push origin device
